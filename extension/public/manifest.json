{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "兰鹿",
  "description": "将当前/左侧/右侧标签页添加到兰鹿服务器",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "extension_16.png",
      "24": "extension_24.png",
      "32": "extension_32.png"
    }
  },
  "icons": {
    "16": "extension_16.png",
    "32": "extension_32.png",
    "48": "extension_48.png",
    "128": "extension_128.png",
    "256": "extension_256.png"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
