# 服务器配置 - 局域网访问
PORT=8082
HOST=0.0.0.0
NODE_ENV=development

# 数据库配置
DB_TYPE=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=lgr
DB_USER=lgr
DB_PASSWORD=lgr
DB_SSL=allow

# 认证配置
API_KEY=comic

# 应用配置
ARCHIVE_PATH=/nas/media/comic/unusual
THUMBNAIL_PATH=./data/thumb

# CORS配置 - 允许所有来源访问
CORS_ORIGIN=*

# 迁移控制（可选）
# DISABLE_AUTO_MIGRATION=true

# 日志配置（可选）
LOG_LEVEL=debug
LOG_FORMAT=combined
JWT_SECRET=d2015833994569e3a4e3

# 扫描与缩略图设置
# 是否启用自动文件监视与定时扫描（false 可禁用）
ENABLE_AUTO_SCAN=true
# 启动时是否立即进行一次目录扫描（false 可禁用）
ENABLE_INITIAL_SCAN=false
# 定时扫描 CRON 表达式（示例：*/10 * * * * 每10分钟）
SCAN_INTERVAL_CRON="0 0 * * *"
# 是否启用自动定时缩略图生成（false 可禁用）
ENABLE_AUTO_THUMBNAIL=true
# 缩略图定时任务 CRON 表达式（示例：0 * * * * 每小时）
THUMBNAIL_INTERVAL_CRON="0 0 * * *"
# Shinobu 并发任务上限
MAX_CONCURRENT_JOBS=8
# 文件监视器不可用时的回退轮询间隔（毫秒）
SCAN_FALLBACK_INTERVAL_MS=300000