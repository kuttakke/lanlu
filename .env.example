# 服务器配置 - 局域网访问
PORT=8082
HOST=0.0.0.0
NODE_ENV=development

# 数据库配置 - 使用完整的连接字符串
# 格式: <db_type>://<username>:<password>@<host>:<port>/<database>?sslmode=<ssl_mode>
# 示例: postgres://lgr:lgr@127.0.0.1:5432/lgr?sslmode=allow
DB_STRING=postgres://lgr:lgr@127.0.0.1:5432/lgr?sslmode=allow

# 认证配置
JWT_SECRET=d2015833994569e3a4e3

# CORS配置 - 允许所有来源访问
CORS_ORIGIN=*

# 数据库连接池配置
POOL_MAX=10                    # 最大连接数
POOL_MAX_IDLE=5                # 最大空闲连接数
POOL_ACQUIRE_TIMEOUT=5000      # 获取连接超时 (ms)
POOL_IDLE_TIMEOUT=300000       # 空闲超时 (ms, 5分钟)
POOL_MAX_LIFETIME=1800000      # 连接最大生命周期 (ms, 30分钟)
POOL_KEEPALIVE=60000           # 健康检查间隔 (ms, 1分钟)

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=simple
LOG_FILE=